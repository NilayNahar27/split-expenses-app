<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Split Expense App</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <h2>Split Expense App</h2>

  <!-- Add Expense Form -->
  <form action="/add-expense" method="POST">
    <input name="description" placeholder="Description" required />
    <input name="amount" type="number" placeholder="Amount" required />
    <input name="paid_by" placeholder="Paid By" required />
    <input name="participants" placeholder="Participants (comma-separated)" required />
    <button type="submit">Add Expense</button>
  </form>

  <!-- Expense Table -->
  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Amount</th>
        <th>Paid By</th>
        <th>Participants</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% expenses.forEach(exp => { %>
        <tr>
          <td><%= exp.description %></td>
          <td>₹<%= exp.amount %></td>
          <td><%= exp.paid_by %></td>
          <td><%= exp.participants.join(', ') %></td>
          <td>
            <form action="/api/expenses/<%= exp._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this expense?');">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Summary Section -->
  <div class="summary">
    <h3>People</h3>
    <ul>
      <% people.forEach(p => { %>
        <li><%= p %></li>
      <% }) %>
    </ul>

    <h3>Balances</h3>
    <ul>
      <% for (let [name, amt] of Object.entries(balances)) { %>
        <li><%= name %>: ₹<%= amt.toFixed(2) %></li>
      <% } %>
    </ul>

    <h3>Settlements</h3>
    <ul>
      <% settlements.forEach(s => { %>
        <li><%= s.from %> pays <%= s.to %> ₹<%= s.amount %></li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
